<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Pendaftaran" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/containerNama">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nama"
            android:maxLines="1"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:id="@+id/containerAlamat">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAlamat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Alamat"
            android:maxLines="2"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:id="@+id/containerNomor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNomor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nomor HP"
            android:maxLines="1"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_marginRight="30dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLaki"
                android:text="Laki-laki"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/rbPerempuan"
                android:text="Perempuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RadioGroup>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi Pendaftaran"/>

    <Button
        android:id="@+id/btnLocation"
        android:text="Cek Lokasi"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tvUpload"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Foto Identitas"/>

    


</androidx.appcompat.widget.LinearLayoutCompat>